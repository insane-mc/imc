{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@insane-mc/*": [
        "src/*"
      ],
      "@insane-mc/package-*": [
        "packages/*/src"
      ],
    },
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ],
}